Host godzilla
    HostName 100.72.156.92

Host occult
    HostName 100.70.68.47

Host magic
    HostName 100.120.184.88

Host wizard
    HostName 100.105.10.47


Host *
    # Auth
    ChallengeResponseAuthentication no
    PubkeyAuthentication yes
    PreferredAuthentications publickey

    # Crypto (optional; you could also just trust OpenSSH defaults)
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
    KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
    HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa

    # Connection robustness
    ServerAliveInterval 60
    ServerAliveCountMax 5
    TCPKeepAlive yes
    ConnectTimeout 30
    ConnectionAttempts 3

    # Convenience
    ForwardAgent yes
    AddKeysToAgent yes
    HashKnownHosts yes
    Compression yes

    # Security-ish extras
    # StrictHostKeyChecking ask
    VerifyHostKeyDNS no
    VisualHostKey no

    # Logging: keep global sane; override per-host if needed
    LogLevel INFO

    # X11
    ForwardX11 no
    ForwardX11Trusted no

    # Misc
    PermitLocalCommand yes

Include config_$(uname | tr '[:upper:]' '[:lower:]')
